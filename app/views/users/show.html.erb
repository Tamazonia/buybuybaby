<div class="container text-center" style="background-color: grey">
  <h3>Great to have you here, <%= @user.first_name %></h3>
  <br>
  <h4>Your Profile information:</h4>

  <p><%= @user.first_name %> <%= @user.last_name %></p>
  <p><%= @user.address %></p>
  <p>&#9742 : <%= @user.phone %></p>
  <p>&#x2709 : <%= @user.email %></p>

  <%= link_to "Edit",  edit_user_registration_path, class: "btn btn-primary" %>

  <br>

  </div>

<br>
<br>

<div class="container">

  <h4>What you are selling:</h4>
  <br>
  <br>
  <%= render partial: "clothings/soldclothings", locals: {clothings: @clothings.select { |clothing| clothing.up_for_sale? } }  %>
  <br>
  <br>
  <h4>Sold itens:</h4>
  <%= render partial: "clothings/soldclothings", locals: {clothings: @clothings.select { |clothing| clothing.bought? } } %>

</div>


<div class="container">
<br>
<h4>Bougth itens:</h4>
<br>
<% @purchases.each do |purchase| %>
  <div style="display: flex">

  <%clothing_purchased = Clothing.find(purchase.clothing_id)%>
    <div>
    <%= link_to(clothing_path(clothing_purchased)) do %>
      <%= cl_image_tag clothing_purchased.photo.url, width: 100, height: 100, crop: :fill %>
    <% end %>

    </div>
    <div style="padding-left: 10px">
    <p>Price: R$ <%=clothing_purchased.price%> </p>
    <p><%=clothing_purchased.description%> </p>
    <p>Data da compra: <%=purchase.created_at%> </p>
    </div>
  </div>
  <br>
  <br>
<% end %>
</div>
