<div class="container">



  <div class="col-xs-6">

    <%= simple_form_for([@clothing, @purchase]) do |f| %>
    <%= f.input "Item", input_html: { value: @clothing.description } %>
    <%= image_tag(@clothing.photo) %>
    <%= f.input "Preco", input_html: { value: @clothing.price } %>
    <%end%>

  </div>

  <div class="col-xs-6">
    <%= render 'new' %>
  </div>



</div>



